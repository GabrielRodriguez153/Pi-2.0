<%-include ("partials/head.ejs")%>
<%- include ("partials/header.ejs")%>

<div class="main-wrapper">
    <div class="container">
      <section class="info-hotel-general">
        <div class="info-hotel-general-txt mt-5">
          <div class="hotel-info-container">
              <div class="info-hotel-name mr-3">
                  <h2 id="txtHotelName">Sunset Beach Hotel</h2>
                  <span id="txtHotelLocal">Miami Beach, Florida, USA</span>
              </div>
    
              <div class="vl mx-3"></div>
    
              <div class="info-hotel-adress mr-3">
                  <span id="txtAdr">Address</span>
                  <h5 id="txtHotelAdr">456 Ocean Avenue <br> Miami Beach, FL 33139 USA</h5>
              </div>
    
              <div class="info-hotel-rating">
                  <span id="txtHotelRatin">⭐ 5,0  (1 mil)</span>
              </div>
          </div>
        </div>
    
        <div class="hotel-gallery mt-3">
          <div class="item gallery-img1"><img src="imgs/individual/photo1.svg"></div>
          <div class="item gallery-img2"><img src="imgs/individual/photo2.svg"></div>
          <div class="item gallery-img3"><img src="imgs/individual/photo3.svg"></div>
          <div class="item gallery-img4"><img src="imgs/individual/photo4.svg"></div>
        </div>
      </section>
    
      <section class="hotel-description">
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-6">
                    <div class="description">
                        <h3 id="txtHotelDesc">Descrição do Hotel</h3>
                        <p class="mt-4" id="txtHotelDescPar">Descubra o Oceanfront Paradise Hotel em Miami Beach, onde luxo à beira-mar e comodidades modernas se encontram.</p>
                        <p class="mt-4" id="txtHotelDescPar2">Desfrute de vistas deslumbrantes do oceano, acomodações elegantes e acesso conveniente às atrações de South Beach.</p>
                    </div>
                    <div class="amenities mt-5">
                        <h3 id="txtHotelAmen">Comodidades do Hotel</h3>
                        <ul class="list-unstyled row mt-4">
                          <div class="col-md-7">
                            <li class="d-flex align-items-center mb-3" id="txtHotelAmenSpeci"><i class="fas fa-wifi"></i> Wi-fi</li>
                            <li class="d-flex align-items-center mb-3" id="txtHotelAmenSpeci"><i class="fas fa-parking"></i> Estacionamento</li>
                            <li class="d-flex align-items-center mb-3" id="txtHotelAmenSpeci"><i class="fas fa-snowflake"></i> Ar-condicionado</li>
                          </div>
                          <div class="col-md-5">
                            <li class="d-flex align-items-center mb-3" id="txtHotelAmenSpeci"><i class="fas fa-tshirt"></i> Secador</li>
                            <li class="d-flex align-items-center mb-3" id="txtHotelAmenSpeci"><i class="fas fa-tv"></i> TV Smart</li>
                            <li class="d-flex align-items-center mb-3" id="txtHotelAmenSpeci"><i class="fas fa-cocktail"></i> Varanda</li>
                          </div>
                        </ul>
                        <button class="btn btn-outline-dark btn-amenities" id="txtHotelAllAmen">Mostrar todas as comodidades</button>
                    </div>
                </div>
  
                <div class="col-md-6">
                  <div class="booking-box p-5">
                    <div class="d-flex align-items-center">
                      <div>
                        <span><img src="/imgs/icon/hotel.svg" alt="hotel icon"/></span>
                        <div class="hotel-name mt-2">
                          <h5 id="txtHotelName">Sunset Beach Hotel</h5>
                        </div>
                      </div>
                      <div class="hotel-price ms-auto">
                        <p id="txtHotelPrice">R$ 500 diária</p>
                      </div>
                    </div>
                    
                    <div class="check-in-out mt-4">
                      <form action="" method="post" class="reserve-form">
                        <div class="section-checkIn d-flex align-items-center justify-content-center flex-wrap">
                          <div class="input-group-form">
                            <span><img src="/imgs/icon/clock.svg" alt="location icon"/></span>
                            <div class="col-auto">
                              <label id="txtCheckin">Check-in</label>
                            </div>
                            <div class="col-auto">
                              <input type="time" id="checkIn" class="time-input form-control" placeholder="14:00" />
                            </div>
                          </div>
                          <div class="vl2 mx-3"></div>
                          <div class="input-group-form">
                            <span><img src="/imgs/icon/clock.svg" alt="clock icon" /></span>
                            <div class="col-auto">
                              <label id="txtCheckout">Check-out</label>
                            </div>
                            <div class="col-auto">
                              <input type="time" id="checkOut" class="time-input form-control" placeholder="14:00" />
                            </div>
                          </div>
                        </div>
                        <hr>
                        <div class="section-date-check">
                          <div class="input-group-form">
                            <span><img src="/imgs/icon/calendar.svg" alt="calendar icon" /></span>                 
                              <input type="date" id="dateIn" class="date-input form-control"/>
                              &rarr;
                              <input type="date" id="dateOut" class="date-input form-control"/>
                          </div>
                        </div>
                        <hr>
                        <div class="section-room-check">
                          <div class="input-group-form">
                            <span><img src="/imgs/icon/rooms.svg" alt="room icon"/></span>
                            <div>
                              <label id="txtRooms">Quartos&Hóspedes</label>                 
                              <input type="text" id="guestRoom" class="text-input form-control" placeholder="1 quarto, 2 adultos"/>
                            </div>
                          </div>
                        </div>
                        <hr>
                        <button type="submit" class="btn btn-reserve" id="txtReserveBtn">Reservar</button>
                      </form>
                    </div>
                    
                    <div class="pricing mt-3">
                      <div class="price-hotel-night d-flex align-items-center">
                        <div class=""><p id="txtPriceNight">R$ 500 x 3 noites</p></div>
                        <div class="ms-auto">
                          <span id="txtPricenoTax">R$ 1500</span>
                        </div>
                      </div>
                      <hr>
                      <div class="price-hotel-all d-flex align-items-center">
                        <div>
                          <p id="txtPriceTax"><strong>Valor total sem impostos</strong></p>
                        </div>
                        <div class="ms-auto">
                          <span class="float-right" id="txtPriceIncludeTax">R$ 1500</span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
      </section>
      <hr>
      <section class="hotel-rating mb-5">
        <div class="container mt-5">
          <div class="row">
              <div class="col-md-8">
                  <div class="rating-container">
                      <h2 id="txtHotelNight">3 noites em Sunset Beach Hotel</h2>
                      <div class="rating-txt d-flex align-items-center mt-3">
                        <div>
                          <span class="txt-rating">04 de Abril, 2024</span>
                        </div>
                        <div class="mx-3">&#9473;</div>
                        <div>
                          <span class="txt-rating">07 de Abril, 2024</span>
                        </div>
                      </div>
                  </div>

                  <div class="calendar d-flex align-items-center mt-5">
                    <div class="calendars">
                      <img src="imgs/calendar/Calendar.svg" alt="">
                    </div>
                  </div>
              </div>

              <div class="col-md-4">
                <div class="overview-box p-5">
                  <div class="d-flex align-items-center">
                    <div class="hotel-name mt-2">
                      <h5 class="mb-2" id="txtOverview">Visão geral</h5>
                      <span id="txtOverviewGuest">Avaliação geral dos hóspedes</span>
                    </div>
                  </div>
                  
                  <div class="overview-rating mt-5">
                    <div class="rating-item">
                      <span><img src="/imgs/icon/cleaning.svg" alt="cleaning icon"/></span>
                      <div>
                        <span class="txt-rating px-3"><b>4.8</b></span>
                      </div>
                      <div>
                        <span class="txt-rating">Cleanliness</span>
                      </div>
                    </div>
                    
                    <div class="rating-item">
                      <span><img src="/imgs/icon/locationOver.svg" alt="locationOver icon"/></span>
                      <div>
                        <span class="txt-rating px-3"><b>4.9</b></span>
                      </div>
                      <div>
                        <span class="txt-rating">Location</span>
                      </div>
                    </div>
                    
                    <div class="rating-item">
                      <span><img src="/imgs/icon/valuesMoney.svg" alt="value icon"/></span> 
                      <div>
                        <span class="txt-rating px-3"><b>5.0</b></span>
                      </div>
                      <div>
                        <span class="txt-rating">Value for Money</span>
                      </div>
                    </div>
                    
                    <div class="rating-item">
                      <span><img src="/imgs/icon/comunication.svg" alt="communication icon"/></span>
                      <div>
                        <span class="txt-rating px-3"><b>4.6</b></span>   
                      </div>
                      <div>
                        <span class="txt-rating">Communication</span>   
                      </div>
                    </div>
                  </div>
                  
                  <div class="rating-bar-section">
                    <div class="row">
                      <div class="rating-bar5">
                        <div class="side">
                          <span>5</span>
                        </div>
                        <div class="middle">
                          <div class="bar-container">
                            <div class="bar-5"></div>
                          </div>
                        </div>
                      </div>

                      <div class="rating-bar">
                        <div class="side">
                          <span>4</span>
                        </div>
                        <div class="middle">
                          <div class="bar-container">
                            <div class="bar-4"></div>
                          </div>
                        </div>
                      </div>

                      <div class="rating-bar">
                        <div class="side">
                          <span>3</span>
                        </div>
                        <div class="middle">
                          <div class="bar-container">
                            <div class="bar-3"></div>
                          </div>
                        </div>
                      </div>

                      <div class="rating-bar">
                        <div class="side">
                          <span>2</span>
                        </div>
                        <div class="middle">
                          <div class="bar-container">
                            <div class="bar-2"></div>
                          </div>
                        </div>
                      </div>

                      <div class="rating-bar">
                        <div class="side">
                          <span>1</span>
                        </div>
                        <div class="middle">
                          <div class="bar-container">
                            <div class="bar-1"></div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
              </div>
            </div>
          </div>
        </div>
    </section>
    <hr>
    <section class="hotel-map-id">
      <div class="maps my-5">
        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d114937.45443878474!2d-80.28780037756358!3d25.810321490778872!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1spt-BR!2sbr!4v1717990056246!5m2!1spt-BR!2sbr" width="100%" height="600" style="border:0; border-radius: 5px;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
    </section>
  </div>
</div>
       

<%-include ("partials/footer.ejs")%>
<%-include ("partials/foot.ejs")%>