        <ul class="navbar-nav ml-auto d-flex align-items-center nav-links">
          <li class="nav-item d-flex align-items-center">
            <% if (!session.user) { %>
              <span><img src="/imgs/icon/<%= (url != "/") ? (url === "/hotel/usuario/favoritos") ? 'favorites-active' : 'favorites-black' : 'favorites' %>.svg" alt="Favoritos" class="nav-icon"></span>
            <a id="txtFavorites" class="nav-link 
