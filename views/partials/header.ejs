            <%= (url === "/hotel/usuario/favoritos") ? 'active' : '' %> " href="/hotel/usuario/favoritos">Favoritos</a>
            <% } else { %>
            <span><img src="/imgs/icon/<%= (url != "/") ? (url === "/hotel/usuario/favoritos") ? 'favorites-active' : 'favorites-black' : 'favorites' %>.svg" alt="Favoritos" class="nav-icon"></span>
            <button id="txtFavorites" class="bg-transparent border-0"
            data-toggle="modal"
            data-target="#loginModal"><a class="nav-link 
            <%= (url === "/") ? 'text-white' : '' %>
            <%= (url === "/hotel/usuario/favoritos") ? 'active' : '' %> " >Favoritos</a></button>
            <% } %>
          </li>
          <li class="nav-item d-flex align-items-center">
            <span><img src="/imgs/icon/<%= (url != "/") ? (url === "/hotel/recentes") ? 'recently-active' : 'recently-black' : 'recently'  %>.svg" alt="Vistos Recentemente" class="nav-icon"></span>
