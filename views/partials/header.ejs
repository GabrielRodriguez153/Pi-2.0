<header>
  <nav class="navbar navbar-expand-lg py-4">
    <div class="container">
        <img src="/imgs/image-logo-white.svg" alt="Logo" width="10%">

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse text-center d-flex justify-content-center" id="navbarNav">
            <ul class="navbar-nav ml-auto d-flex align-items-center nav-links">
                <li class="nav-item d-flex align-items-center">
                    <span><img src="/imgs/icon/favorites.svg" alt="Favoritos" class="nav-icon"></span>
                    <a class="nav-link text-white" href="/favoritos">Favoritos</a>
                </li>
                <li class="nav-item d-flex align-items-center">
                    <span><img src="/imgs/icon/recently.svg" alt="Vistos Recentemente" class="nav-icon"></span>
                    <a class="nav-link text-white" href="/recentes">Vistos Recentemente</a>
                </li>
                <li class="nav-item d-flex align-items-center">
                    <span><img src="/imgs/icon/map.svg" alt="Mapa" class="nav-icon"></span>
                    <a class="nav-link text-white" href="/mapa">Mapa</a>
                </li>
            </ul>
        </div>

        <% if (session.loggedIn) { %>
            <img src="path/to/your/image.jpg" alt="Imagem de Sessão Ativa">
            <form action="/logout" method="get">
              <button type="submit">Logout</button>
            </form>
          <% } else { %>
            <button
              type="button"
              class="btn btn-outline-light me-2"
              data-toggle="modal"
              data-target="#loginModal"
            >
            Entrar
            </button>
          <% } %>
        
