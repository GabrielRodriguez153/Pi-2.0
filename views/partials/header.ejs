          <li class="nav-item d-flex align-items-center">
            <span><img src="/imgs/icon/<%= (url != "/") ? (url === "/hotel/mapa") ? 'map-active' : 'map-black' : 'map'  %>.svg" alt="Mapa" class="nav-icon"></span>
            <a id="txtMap" class="nav-link 
            <%= (url === "/") ? 'text-white' : '' %>
            <%= (url === "/hotel/mapa") ? 'active' : '' %> " href="/hotel/mapa">Mapa</a>
          </li>
        </ul>
      </div>

