<%-include ("partials/head.ejs")%>
<div class="main-wrapper">
    <section class="home text-white">
        <%-include ("partials/header.ejs")%>
        <div class="container">
            <div class="text-center">
                <div class="container">
                    <h1 class="display-4">Encontre a vista perfeita para a sua próxima escapada </h1>
                    <span class="lead ">“Sight Inn, onde cada viagem se transforma em uma experiência única.”</span>
                </div>
            </div>

            <div class="container mt-5">
                <div class="search-bar p-3 rounded">
                    <form action="" method="post" class="booking-input">
                            <div class="location-input">
                                <span><i class="fa-solid fa-location-dot"></i></span>
                                <div>
                                    <label class="mb-auto">Onde vamos?</label>
                                    <input type="text" id="destino" placeholder="Buscar destinos">
                                </div>
                            </div>
                            <div class="location-input">
                                <span><i class="fa-solid fa-calendar-days"></i></span>
                                <div>
                                    <label class="mb-auto">Check-in</label>
                                    <input type="date" id="checkIn">
                                </div>
                            </div>
                            <div class="location-input">
                                <span><i class="fa-solid fa-calendar-days"></i></span>
                                <div>
                                    <label class="mb-auto">Checkout</label>
                                    <input type="date" id="checkOut">
                                </div>
                            </div>
                            <div class="location-input">
                                <span><i class="fa-solid fa-bed"></i></span>
                                <div>
                                    <label class="mb-auto">Quartos & Hóspedes</label>
                                    <input type="text" id="hospedes" placeholder="1 quarto, 2 hóspedes">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-warning">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </button>
                    </form>
                </div>
            </div>

            <div class="filter-bar">
                <form action="" method="post">
                    <div class="row">
                        <div class="form-group col-md-3 mb-3">
                            <label>Faixa de Preço</label>
                            <select type="text" class="form-control" id="destino" placeholder="Buscar destinos"></select>
                        </div>
                        <div class="form-group col-md-2 mb-3">
                            <label>Avaliação</label>
                            <select type="date" class="form-control" id="checkIn"></select>
                        </div>
                        <div class="form-group col-md-2 mb-3">
                            <label>Tipo</label>
                            <select type="date" class="form-control" id="checkOut"></select>
                        </div>
                        <div class="form-group col-md-2 mb-3">
                            <label>Localidade</label>
                            <select type="text" class="form-control" id="hospedes" placeholder="1 quarto, 2 hóspedes"></select>
                        </div>
                        <div class="form-group col-md-3 mb-3">
                            <button type="submit" class="btn btn-warning btn-block">
                                Remover Filtros <i class="fa-solid fa-xmark"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <hr>
        </div>

    </section>

    <section class="card position-relative">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="suggestion pr-3 mb-5 mb-lg-0 d-flex justify-content-between align-items-center">
                        <h2 class="mt-3 mb-4 content-title d-inline-block">Sugestões</h2>
                        <span>Escolha entre 1400 opções de hotéis</span>
                    </div>
                </div>
                <%- include('partials/apartamentos.ejs') %>
            </div>
        </div>
    </section>
</div>
<%-include ("partials/footer.ejs")%>
<%-include ("partials/foot.ejs")%>