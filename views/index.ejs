<%- include ("partials/head.ejs")%>
<div class="main-wrapper">
  <section class="home">
    <%- include ("partials/header.ejs")%>
    <%- include ("partials/Auth.ejs")%>
    <div class="container">
      <div class="text-center">
        <div class="section-container text-center">
          <h1 class="display-4 mb-3" id="mainText">Encontre a vista perfeita para a sua próxima escapada</h1>
          <p class="lead" id="subText">“Sight Inn, onde cada viagem se transforma em <br> uma experiência única.”</p>
        </div>
      </div>

      <%- include("partials/filters.ejs") %>
    </div>
    <hr />
  </section>

  <section class="card position-relative">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div id="filters">
            <div>
              <label for="location-filter">Localização:</label>
              <select id="location-filter">
                <option value="*">Todos</option>
                <option value=".Fort_Lauderdale">Fort Lauderdale</option>
                <option value=".Hollywood">Hollywood</option>
                <option value=".West_Palm_Beach">West Palm Beach</option>
                <option value=".Miami_Beach">Miami Beach</option>
                <option value=".Miami">Miami</option>
              </select>
            </div>
            <div>
              <label for="rating-filter">Classificação:</label>
              <select id="rating-filter">
                <option value="*">Todos</option>
                <option value=".rating-5">5 Estrelas</option>
                <option value=".rating-4.5">4.5 Estrelas</option>
                <option value=".rating-4">4 Estrelas</option>
              </select>
            </div>
          </div>
          <div class="suggestion pr-3 mb-5 mb-lg-0 d-flex justify-content-between align-items-center">
            <h2 class="mt-3 mb-4 content-title d-inline-block" id="txtSuggest">Sugestões</h2>
            <span id="txtOption">Escolha entre <%= hotels.length %> opções de hotéis</span>

          </div>
        </div>
        <%- include('partials/apartamentos.ejs') %>
      </div>

    </div>
    <div class="pagination">
      <a href="/0"><span class="page-number rounded-circle">0</span></a>      
      <a href="/1"><span class="page-number rounded-circle">1</span></a>
      <a href="/2"><span class="page-number rounded-circle">2</span></a>
      <a href="/3"><span class="page-number rounded-circle">3</span></a>
      <a href="/4"><span class="page-number rounded-circle">4</span></a>
    </div>
  <br>
  </section>
</div>
<%-include ("partials/footer.ejs")%> <%-include ("partials/foot.ejs")%>
