<%- include ("partials/head.ejs")%>
<div class="main-wrapper">
  <section class="home">
    <%- include ("partials/header.ejs")%>
    <%- include ("partials/Auth.ejs")%>
    <div class="container">
      <div class="text-center">
        <div class="section-container text-center">
          <h1 class="display-4 mb-3" id="mainText">Find the perfect view for your next trip</h1>
          <p class="lead" id="subText">“Sight Inn, where a trip becomes <br> an unique experience.”</p>
        </div>
      </div>

      <%- include("partials/filters.ejs") %>
    </div>
