            <span><img src="/imgs/icon/<%= (rotaPrincipal != true) ? (url === "/eng/hotel/usuario/favoritos") ? 'favorites-active' : 'favorites-black' : 'favorites' %>.svg" alt="favorites" class="nav-icon"></span>
            <button id="txtFavorites" class="bg-transparent border-0"
            data-toggle="modal"
            data-target="#loginModal"><a class="nav-link 
            <%= (rotaPrincipal === true) ? 'text-white' : '' %>
