<!-- Modal de Login -->
<div
  class="modal fade align-content-center"
  id="loginModal"
  tabindex="-1"
  aria-labelledby="loginModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-left"></div>
      <div class="modal-right">
        <div class="d-flex justify-content-between align-items-center">
          <img src="imgs/image-logo.svg" alt="" width="50%" />
          <a type="button" data-dismiss="modal" aria-label="Close">
            <img src="/imgs/icon/close-black.svg" alt="Close" />
          </a>
        </div>

        <div class="modal-header flex-column pb-1">
          <p class="modal-subtitle" id="txtWelcome">Welcome back to Sight Inn</p>
          <h2 class="modal-title text-start" id="loginModalLabel">
            We are happy to see you again!
          </h2>
          <p class="modal-subtitle" id="txtSign">Plese login with your email and password.</p>
        </div>
        <div class="modal-body">
          <form action="/eng/login" method="POST">
            <div id="emailForm">
              <div class="form-group">
                <label for="loginEmail" id="txtEmail">Email</label>
                <input
                  type="email"
                  class="form-control"
                  id="loginEmail"
                  name="email"
                  placeholder="Type your email"
                />
              </div>
              <div class="mx-auto d-grid col-x">
                <button
                  type="button"
                  class="btn btn-lg btn-primary btn-block"
                  id="Auth__Continue--login"
                >
                  Continue
                </button>
              </div>
            </div>
            <div id="passwordForm" class="hidden">
              <div class="form-group">
                <label for="loginPassword" id="txtPass">Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="loginPassword"
                  placeholder="Type your password"
                  name="senha"
                />
              </div>
              <div class="mx-auto d-grid col-x">
                <button
                  type="submit"
                  class="btn btn-lg btn-primary btn-block"
                  id="loginButton"
                >
                  Login
                </button>              
              </div>
            </div>
          </form>

          <div class="separator">
            <span><button
              id="txtSignUp"
              type="button"
              class="btn btn-link"
              data-toggle="modal"
              data-target="#signupModal"
            >
            Register
            </button></span>
          </div>
          <div class="d-flex">
            <button class="btn btn-social btn-outline-black">
              <span id="txtGoogle"><i class="fa-brands fa-google"></i> Google</span>
            </button>
            <button class="btn btn-social btn-outline-black">
              <span><i class="fa-brands fa-facebook"></i></span>
              <span class="ps-1" id="txtFace">Facebook</span>
            </button>
            <button class="btn btn-social btn-outline-black">
              <span id="txtApple"><i class="fa-brands fa-apple"></i> Apple</span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- Modal de Cadastro -->
<div
  class="modal fade align-content-center"
  id="signupModal"
  tabindex="-1"
  aria-labelledby="signupModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-left"></div>
      <div class="modal-right">
        <div class="d-flex justify-content-between align-items-center">
          <img src="imgs/image-logo.svg" alt="" width="50%" />
          <a type="button" data-dismiss="modal" aria-label="Close">
            <img src="/imgs/icon/close-black.svg" alt="" />
          </a>
        </div>

        <div class="modal-header flex-column">
          <p class="modal-subtitle" id="txtWelcome">Welcome to Sight Inn</p>
          <h2 class="modal-title text-start" id="signupModalLabel">
            We are happy to see you!
          </h2>
          <p class="modal-subtitle" id="txtSign">
            Please login or enter with other platforms.
          </p>
        </div>
        <div class="modal-body">
          <form  action="/eng/cadastro/usuario" method="POST">
          <div id="emailForm">
            <div class="form-group">
              <label for="signupEmail">Email</label>
              <input
                type="email"
                class="form-control"
                id="signupEmail"
                placeholder="Type your email"
                name="email"
              />
            </div>
            <div class="mx-auto d-grid col-x">
              <button
                type="button"
                class="btn btn-lg btn-primary btn-block"
                id="continueButton"
              >
                Continue
              </button>
            </div>
            </div>

          <div id="passwordForm" class="hidden">
            <div class="form-group">
              <label for="signupPassword">Password</label>
              <input
                type="password"
                class="form-control"
                id="signupPassword"
                placeholder="Type your password"
                name="senha"
              />
            </div>
            <div class="mx-auto d-grid col-x">
              <button type="submit" class="btn btn-lg btn-primary btn-block">
                Register
              </button>
            </div>
          </div>
        </form>

          <div class="separator">
            <span><button
              type="button"
              class="btn btn-link"
              data-toggle="modal"
              data-target="#loginModal"
            >
            Login
            </button></span>
          </div>
          <div class="d-flex">
            <button class="btn btn-social btn-outline-black">
              <span><i class="fa-brands fa-google"></i> Google</span>
            </button>
            <button class="btn btn-social btn-outline-black">
              <span><i class="fa-brands fa-facebook"></i></span>
              <span class="ps-1">Facebook</span>
            </button>
            <button class="btn btn-social btn-outline-black">
              <span id="txtSign"><i class="fa-brands fa-apple"></i> Apple</span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
